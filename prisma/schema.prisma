datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id
  email     String  @unique
  name      String?
  image_url String?
  Board     Board[]

  @@map("users")
}

model Board {
  id      String   @id
  userId  String
  name    String
  created DateTime @default(now())
  updated DateTime @updatedAt
  user    User     @relation(fields: [userId], references: [id])
  Column  Column[]

  @@map("boards")
}

model Column {
  id       String @id
  name     String
  boardId  String
  position Int
  board    Board  @relation(fields: [boardId], references: [id])

  @@map("columns")
}
